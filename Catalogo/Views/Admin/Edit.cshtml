@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div class="modal-body">
        <form action="/admin/EditPro?id=@item.id" method="post">
            <div class="form-group mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" required name="nombre" value="@item.nombre" class="form-control" placeholder="Nombre">
                @Html.ValidationMessage("nombre")
            </div>
            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <textarea required rows="5" name="descripcion" class="form-control" placeholder="Descripción"> </textarea>
                @Html.ValidationMessage("descripcion")
            </div>
            <div class="form-group mb-3">
                <label for="exampleInputPassword1" class="form-label">Precio</label>
                <input type="text" name="precio" required value="@string.Format("{0:N2}", @item.precio)" class="form-control" placeholder="Precio">
                @Html.ValidationMessage("precio")
            </div>
            <div class="modal-footer">
                <button type="submit" class="edit btn btn-primary">Editar</button>
            </div>
        </form>
    </div>
}



